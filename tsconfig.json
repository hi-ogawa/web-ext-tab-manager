{
  "extends": "@tsconfig/strictest/tsconfig.json",
  "include": ["src", "e2e"],
  "exclude": ["src/dev"],
  "compilerOptions": {
    "exactOptionalPropertyTypes": false,
    "noEmit": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "target": "ESNext",
    "lib": ["ESNext", "DOM"],
    "types": ["vite/types/importMeta"],
    "jsx": "react-jsx"
  }
}
